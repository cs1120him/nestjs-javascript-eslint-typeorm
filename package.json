{
    "name": "mitra-backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "format": "prettier --write \"**/*.{js,json}\"",
        "lint": "eslint --fix \"src/*.js\"",
        "start": "babel-node index.js",
        "start:dev": "nodemon",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "migration:generate": "ts-node node_modules/.bin/typeorm migration:generate -f env/.env",
        "migration:run": "ts-node node_modules/.bin/typeorm migration:run  -f env/.env",
        "migration:revert": "ts-node node_modules/.bin/typeorm migration:revert  -f env/.env"
    },
    "dependencies": {
        "@nestjs/common": "7.0.0",
        "@nestjs/core": "9.0.5",
        "@nestjs/platform-express": "7.0.0",
        "@nestjs/typeorm": "7.1.0",
        "nestjs-config": "1.4.6",
        "pg": "8.2.1",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.5.4",
        "ts-node": "8.10.2",
        "typeorm": "0.2.25",
        "typescript": "3.9.5"
    },
    "devDependencies": {
        "@babel/core": "7.6.2",
        "@babel/node": "7.6.2",
        "@babel/plugin-proposal-decorators": "7.6.0",
        "@babel/plugin-transform-runtime": "7.6.2",
        "@babel/preset-env": "7.6.2",
        "@babel/register": "7.6.2",
        "@babel/runtime": "7.6.2",
        "@nestjs/testing": "7.0.0",
        "babel-eslint": "10.1.0",
        "eslint": "6.8.0",
        "eslint-config-airbnb-base": "14.2.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-import": "2.21.2",
        "eslint-plugin-prettier": "3.1.4",
        "husky": "4.2.5",
        "jest": "26.0.1",
        "lint-staged": "7.2.2",
        "nodemon": "1.19.2",
        "prettier": "1.19.1",
        "supertest": "4.0.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json"
        ],
        "rootDir": "src",
        "testRegex": ".spec.js$",
        "coverageDirectory": "../coverage"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": ""
        }
    },
    "lint-staged": {
        "src/*.js": [
            "prettier --write",
            "eslint --fix"
        ]
    }
}
